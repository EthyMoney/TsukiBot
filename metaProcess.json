{
  "apps": [
    {
      "name": "cg-meta-cache",
      "script": "getCoinMeta.js",
      "log_date_format": "YYYY-MM-DD HH:mm",
      "ignoreWatch": [
        "node_modules",
        "common",
        "public",
        "chartscreens",
        "stuff"
      ],
      "watch": true,
      "args": [
	"--no-autorestart",
	"--color"
      ],
      "env": {
        "DEBUG_COLORS": true
      },
      "node-args": [
        "--max-old-space-size=6144"
      ]
    }
  ]
}
